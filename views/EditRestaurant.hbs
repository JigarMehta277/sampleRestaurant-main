<h1>Edit Restaurant</h1>

    {{#if message}}
        <p>{{message}}</p>
    {{/if}}

    <form action="/api/restaurants/{{_id}}" method="put">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="{{restaurant.name}}" required>

        <label for="cuisine">Cuisine:</label>
        <input type="text" id="cuisine" name="cuisine" value="{{restaurant.cuisine}}" required>

        <label for="building">Building:</label>
        <input type="text" id="building" name="address.building" value="{{restaurant.address.building}}" required>

        <label for="coord0">Coordinate 1:</label>
        <input type="number" id="coord0" name="address.coord[0]" value="{{restaurant.address.coord}}" required>

        <label for="street">Street:</label>
        <input type="text" id="street" name="address.street" value="{{restaurant.address.street}}" required>

        <label for="zipcode">Zipcode:</label>
        <input type="text" id="zipcode" name="address.zipcode" value="{{address.zipcode}}" required>

        <label for="borough">Borough:</label>
        <input type="text" id="borough" name="address.borough" value="{{restaurant.borough}}" required>
        {{#each restaurant.grades}}
             
             <label for="gradeDate">Grade Date:</label>
            <input type="date" id="gradeDate" name="grades[{{@index}}].date" value="{{date}}" >

            <label for="grade">Grade:</label>
            <input type="text" id="grade" name="grades[{{@index}}].grade" value="{{grade}}" >

            <label for="score">Score:</label>
            <input type="number" id="score" name="grades[{{@index}}].score" value="{{score}}" >
        {{/each}}
        <button type="submit">Update Restaurant</button>
    </form>